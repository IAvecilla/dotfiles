[alias]
    pushb = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
[commit]
	gpgsign = true
	verbose = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[pager]
	branch = false
	tag = false
[tag]
	sort = version:refname
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[merge]
	conflictstyle = zdiff3
